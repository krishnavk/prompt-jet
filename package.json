{
  "name": "prompt-jet",
  "version": "1.0.0",
  "description": "Full-stack LLM prompt execution platform",
  "private": true,
  "workspaces": [
    "apps/web",
    "apps/server",
    "packages/shared"
  ],
  "scripts": {
    "export:web": "cd apps/web && GITHUB_PAGES=true next build",
    "deploy:web": "npm run export:web && gh-pages -d apps/web/out",
    "dev": "npm run dev:web",
    "dev:web": "cd apps/web && npm run dev",
    "dev:server": "cd apps/server && npm run start:dev",
    "dev:all": "concurrently \"npm run dev:web\" \"npm run dev:server\"",
    "build": "npm run build:shared && npm run build:web && npm run build:server",
    "build:shared": "cd packages/shared && npm run build",
    "build:web": "cd apps/web && npm run build",
    "build:server": "cd apps/server && npm run build",
    "install:all": "npm install --workspaces",
    "audit": "npm audit",
    "audit:fix": "npm audit fix",
    "security:check": "npm run audit && cd apps/web && npm audit"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.2.2",
    "concurrently": "^9.2.0",
    "gh-pages": "^6.0.0"
  },
  "dependencies": {
    "@radix-ui/react-tooltip": "^1.2.7",
    "@types/uuid": "^10.0.0",
    "uuid": "^11.1.0"
  }
}
